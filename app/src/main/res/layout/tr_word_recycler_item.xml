<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/subword_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryText"
        tools:text="1"/>

    <TextView
        android:id="@+id/syn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        tools:text="task, problem,challange, issue"
        />

    <TextView
        android:id="@+id/mean_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/red_light"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        tools:text="(задание, проблема, вопрос)"/>

    <TextView
        android:id="@+id/ex_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/colorSecondaryText"
        android:layout_marginLeft="8dp"
        android:visibility="gone"
        tools:text="краевая задача - boundary value problem"/>

</LinearLayout>